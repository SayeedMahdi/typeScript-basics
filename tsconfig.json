{
    "compilerOptions": {
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "target": "ES6",
      "noEmitOnError": true,
      "strict":true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
    
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
  }